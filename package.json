{
  "name": "gear-box",
  "version": "1.0.0",
  "description": "interface to config files for templates",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "commit": "git-cz",
    "lint": "eslint \"src/**/*.ts\"",
    "lintfix": "eslint \"src/**/*.ts\" --fix",
    "test": "ava",
    "posttest": "npm run view-coverage && npm run lint",
    "prepack": "rm -rf lib && tsc -b",
    "semantic-release": "semantic-release",
    "view-coverage": "nyc --extension .ts ava --forbid-only"
  },
  "keywords": [
    "ts-packrat",
    "geenee"
  ],
  "author": "YizYah",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^14.14.19",
    "fs-extra": "^9.1.0",
    "js-yaml": "^3.14.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "ava": "^3.15.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.21.0",
    "ghooks": "^2.0.4",
    "mock-fs": "^4.13.0",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "bugs": "https://github.com/YizYah/gear-box/issues",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "lib/**/*"
  ],
  "homepage": "https://github.com/YizYah/gear-box",
  "types": "lib/index.d.ts",
  "repository": "YizYah/gear-box",
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
}
